{% extends 'EvalforGescompevalBundle::layout.html.twig' %}

{# type must be defined #}
{% if type is defined %}

{%  block title %}
  Gescompeval - {{ 'skill.delete.title'|trans({}, 'EvalforGescompevalBundle') }}
  				{{ type_trans|trans({}, 'EvalforGescompevalBundle') }}
{% endblock %}

{% block contenido %}
	<div class="panel panel-default">
		<div class="panel-heading">
	    	<h3 class="panel-title">
	    		{{ 'skill.delete.title'|trans({}, 'EvalforGescompevalBundle') }}
	    		{{ type_trans|trans({}, 'EvalforGescompevalBundle') }}
	    	</h3>
	    </div>
	   	<div class="panel-body">
	    	<form id="id_form" action="{{  path('EGB_delete_skill', {'type': type}) }}"
	    		  method="post" role="form">
		    	<div class="row-fluid">
			   		<select id="select_skills" class="selectpicker" data-style="btn-primary"
		    				data-live-search="true" data-width="100%"
		    				onChange="changeId('select_skills','SkillForm_id')">
		    			<option value="0">
		    				{{ 'select'|trans({}, 'EvalforGescompevalBundle') }}
		    				{{ type_trans|trans({}, 'EvalforGescompevalBundle') }}
		    			</option>
					    {% for skill in skills_all %}
				    		<optgroup label="{{ skill.code }}">
								<option style="white-space: pre-line;"
										value="{{ skill.id }}" title="{{ skill.code }}">
									{{ skill.shortdescription }}</option>
							</optgroup>
				    	{% endfor %}
					</select>
				</div>
				{{ form_row(form.id) }}
				{{ form_row(form._token) }}
			    <button type="submit" class="btn btn-default">
			    	{{ 'skill.delete.title'|trans({}, 'EvalforGescompevalBundle') }}
			    </button>
			</form>
		</div>
	</div>
{% endblock %}
{% endif %}{#% if type is defined %#}