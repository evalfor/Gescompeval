<div class="panel panel-default">
	<div class="panel-heading">
    	<h3 class="panel-title">{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}</h3>
    </div>
   	<div class="panel-body">
		<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST"
			  class="fos_user_change_password">
			<div class="form-group">
				{{ form_row(form.current_password) }}
			</div>
			<div class="form-group">
				{{ form_row(form.new) }}
			</div>
			{{ form_row(form._token) }}
		    <div>
		        <input type="submit" class="btn btn-default"
		        		value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" />
		    </div>
		</form>
	</div>
</div>
