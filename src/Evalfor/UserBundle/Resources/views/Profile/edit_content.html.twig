<div class="panel panel-default">
	<div class="panel-heading">
    	<h3 class="panel-title">{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}</h3>
    </div>
   	<div class="panel-body">
		<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST"
			class="fos_user_profile_edit">

			<div class="form-group">
				{{ form_row(form.username) }}
			</div>
			<div class="form-group">
				{{ form_row(form.email) }}
			</div>
			<div class="form-group">
				{{ form_row(form.current_password) }}
			</div>

			{{ form_row(form._token) }}
		    <div>
		        <input type="submit" class="btn btn-default"
		        		value="{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}" />
		    </div>
		</form>
	</div>
</div>

